"! Automatic word wrap
set tw=79

" syntax highlighting
syntax enable

" Line numbering
set number

" utf-8 encoding
set encoding=utf-8

"set bell to be visual
set visualbell

" Set tab settings
set tabstop=4     "! How many collumns are \t
set expandtab     "! Set soft tabs
set shiftwidth=4  "! Set automatic indent width
set softtabstop=4 "! Set softtab to be 4 spaces
