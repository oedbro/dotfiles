! Set a nice font
!urxvt.font: xft:Terminus:size=10,xft:adobe:size=10
!urxvt.font: -*-terminus-medium-r-normal--14-*-*-*-*-*-iso10646-1
!urxvt.font: -*-roboto mono thin-*-*-normal-*-*-120-*-*-*-*-iso10646-1
URxvt.font: xft:RobotoMono:size=9,xft:adobe:size=11
URxvt*letterSpace: 1

!urxvt*imLocale: en_UK.UTF-8

!scrollback (scrollable history)
xterm*savelines: 2048
URxvt.saveLines: 2048
! Dont scroll with output
URxvt*scrollTtyOutput: false
! Scroll in relation to buffer
URxvt*scrollWithBuffer: true
! Scrollback to botom on keypress
URxvt*scrollTtyKeypress: true
! Disable urxvt scrollback in less and vim (use builtin scrollback)
URxvt*secondaryScreen: 1
URxvt*secondaryScroll: 0
! Remove scrollbar
URxvt*scrollBar: false

!Set every shell to be a login shell
xterm*loginshell: true
URxvt.loginShell: True

! Double cliclick a word to mark it
xterm*charClass: 33:48,35:48,43:48,45-47:48,64:48,126:48
URxvt*cutchars: "`\"'&()*,:;<=>?[\\]^{|}$"


! Transparancy

URxvt*depth: 32
URxvt*background: rgba:0000/0043/0054/c800
! URxvt*transparent: true
! URxvt*shading: 20


! Colours
! URxvt*background: #002b36
URxvt*foreground: #657b83

!!*fading: 40
!*fadeColor: #002b36
URxvt*CursorColor: #cfcfc2
URxvt*pointerColorBackground: #232629
URxvt*pointerColorForeground: #cfcfc2

!!Black
URxvt*color0: #2a2e32
URxvt*color8: #31363b

!! red
URxvt*color1: #c0392b
!URxvt*color9: #f44f4f
URxvt*color9: #f52929

!! green
URxvt*color2: #218058
URxvt*color10: #27ae60

!! yellow
URxvt*color3: #fdbc4b
URxvt*color11: #fca103

!! blue
URxvt*color4: #2980b9
URxvt*color12: #0099ff

!! magenta
URxvt*color5: #8e44ad
URxvt*color13: #af81ff

!! cyan
URxvt*color6: #27aeae
URxvt*color14: #31dddd

!!white
URxvt*color7: #acada1
URxvt*color15: #cfd0c2

!! Default browser
URxvt*urlLauncher: chromium

!! Dissable Bell
URxvt*urgentOnBell: false


!! encoding 
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End: \033[4~

! Pearl Extensions
URxvt.perl-ext-common: default
